// Data source

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Generator

generator gen {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
  output   = "../prisma/generated/type-graphql"
}

// Data models

model Genre {
  id      Int     @id @default(autoincrement())
  slug    String

  games   Game[]
}

model Platform {
  id    Int     @id @default(autoincrement())
  slug  String

  games Game[]
}

model Game {
  id          Int         @id @default(autoincrement())
  slug        String

  publisher   Publisher?  @relation(fields: [publisherId], references: [id])
  publisherId Int?

  genres      Genre[]
  platforms   Platform[]
}

model Publisher {
  id    Int     @id @default(autoincrement())
  slug  String

  games Game[]
}
