---
import { slugToName } from '../utils/slugToName';

export interface Props {
  title: string;
  image: string;
  href: string;
}

const { title, image, href } = Astro.props;
---

<li class="image-card">
	<a href={href}>
    <img src={image}/>
		<h2>
			{slugToName(title)}
		</h2>
	</a>
</li>
<style>
  /** worry about the fancy css later */
  .image-card {
    list-style: none;
		display: flex;
    padding: 0.25rem;

    width: 15rem;

    border-color: black;
    border-radius: 1rem;
    border-style: groove;

    margin-bottom: 0.5rem;
    margin-right: 1rem;
  }

  .image-card > a {
    text-decoration: none;
    position: inherit;

    width: 100%;
    height: 100%;

    background-color: red;
  }

  img {
    object-fit: cover;
    width: 100%;
    height: 100%;
  }

  h2 {
    text-align: center;
  }
</style>
